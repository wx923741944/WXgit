<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="public_horizontal_gray_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#e6e5e8</item>
    </style>

    <style name="public_horizontal_gray_distance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">#e6e5e8</item>

    </style>
    
    <style name="home_rb_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/selector_text_blue</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>

    </style>
    

    <!-- 网路对话框的样式-->
    <style name="upgrade_dialog_style" parent="android:Theme.Dialog">
        <!-- 去掉默认的标题栏-->
        <item name="android:windowNoTitle">true</item>
        <!-- 让背景透明-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="my_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="my_go_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/go_icon</item>
    </style>

</resources>
