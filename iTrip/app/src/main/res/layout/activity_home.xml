<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/home_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View style="@style/public_horizontal_gray_line"/>

    <RadioGroup
        android:id="@+id/home_rg"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_index_rb"
            style="@style/home_rb_style"
            android:drawableTop="@drawable/selector_home_index_rb"
            android:text="首页" />

        <RadioButton
            android:id="@+id/home_found_rb"
            style="@style/home_rb_style"
            android:drawableTop="@drawable/selector_home_found_rb"
            android:text="发现" />

        <RadioButton
            android:id="@+id/home_trip_rb"
            style="@style/home_rb_style"
            android:drawableTop="@drawable/selector_home_trip_rb"
            android:text="行程" />

        <RadioButton
            android:id="@+id/home_my_rb"
            style="@style/home_rb_style"
            android:drawableTop="@drawable/selector_home_my_rb"
            android:text="我" />



    </RadioGroup>

</LinearLayout>